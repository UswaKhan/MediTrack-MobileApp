<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Fixed Navigation Bar -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#2A3D66"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MediTrack"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingStart="12dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="64dp"
            android:text="Logout"
            android:backgroundTint="#FF9F45"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="16dp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navBar"
        android:layout_above="@id/footer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Your existing content: banner, heading, grid, etc. -->

            <!-- Banner Image -->
            <ImageView
                android:id="@+id/bannerImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/banner"
                android:scaleType="centerCrop"
                android:contentDescription="Banner" />

            <!-- Heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cashier Dashboard"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#2A3D66"
                android:layout_marginTop="30dp"
                android:layout_gravity="center" />

            <!-- Grid of Cards -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="16dp"
                android:rowCount="3"
                android:layout_marginTop="10dp"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <!-- Card 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSellMedicines"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Image -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@drawable/add_medicine"  />

                        <!-- Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sell Medicine"
                            android:textColor="#2A3D66"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewMedicines"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Image -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@drawable/view_medicines" />

                        <!-- Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Medicines"
                            android:textColor="#2A3D66"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 5 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSalesHistory"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Image -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@drawable/sales_history" />

                        <!-- Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sales History"
                            android:textColor="#2A3D66"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 6 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewCustomers"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Image -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@drawable/view_cutomers"/>

                        <!-- Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Customers"
                            android:textColor="#2A3D66"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Footer at the Bottom -->
    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â© 2025 MediTrack. All rights reserved."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:background="#2A3D66" />
</RelativeLayout>
